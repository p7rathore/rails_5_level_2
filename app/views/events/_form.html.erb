<%= form_for(@event) do |f| %>
	<p>
		<%= f.label :name %><br/>
		<%= f.text_field :name, autofocus: true %>
	</p>

	<P>
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</P>

	<p>
		<%= f.label :location %><br/>
		<%= f.text_field :location %>
	</p>

	<p>
		<%= f.label :price %><br/>
		<%= f.number_field :price %>
	</p>
	
	<p>
		<%= f.label :starts_at %><br/>
		<%= f.datetime_select :starts_at %>
	</p>	

	<%= f.submit %> |
	<%= link_to "Cancel", events_path %>

<%end%>