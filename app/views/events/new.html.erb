<h1>Create New Event</h1>

<%= form_for(@event) do |f| %>
	<p>
		<%= f.label :Name %><br/>
		<%= f.text_field :name, autofocus: true %>
	</p>

	<p>
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label :location %><br/>
		<%= f.text_field :location %>
	</p>

	<p>
		<%= f.label :price %><br/>
		<%= f.number_field :price%>
	</p>

	<p>
		<%= f.label :starts_at %><br/>
		<%= f.datetime_select :starts_at %>
	</p>
	
	<%=f.submit %>

<%end%>