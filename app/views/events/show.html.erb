<article>
	<header>
		<%= image_for(@event) %>
		<h1><%= @event.name %></h1>
	</header>
	<p>
		<%= @event.description%>
	</p>
	<h3>When:</h3>
	<P>
		<%= @event.starts_at %>
			
	</P>
	<h3>Where:</h3>
	<P>
		<%= @event.location %>
			
	</P>

	<h3>Price:</h3>
	<P>
		<%= format_price(@event) %>
	</P>
	<h3>Capacity:</h3>
	<p>
		<%= pluralize(@event.capacity, 'spot') %>
	</p>

</article>

<%= link_to "Edit", edit_event_path(@event) %> |
<%= link_to "Delete", event_path(@event), method: :delete, data: {confirm: "Are you sure?"} %>